
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="10dp"
        android:left="2dp"
        android:right="2dp">
        <!--// add android:right="5dp" and android:left="5dp" for border on left and right-->
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <corners android:radius="35dp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="0dp"
                />

<!--            <padding-->
<!--                android:left="10dp"-->
<!--                android:right="10dp"-->
<!--                />-->
<!--            <stroke android:width="2dp" android:color="@color/colorPrimary"></stroke>-->
            <solid android:color="@color/lightOrange" />



        </shape>
    </item>

    <item
        android:bottom="2dp"

        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
                <corners android:radius="35dp"
                    android:bottomRightRadius="0dp"
                    android:bottomLeftRadius="0dp"
                    />
            <stroke
                android:width="1dp"
                android:color="@color/lightOrange" />
            <size android:height="50dp" />
            <padding
                android:bottom="0dp"
                android:left="5dp"
                android:right="5dp" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:top="10dp"
        android:left="-2dp"
        android:right="-2dp"
        >
        <!--// add android:right="5dp" and android:left="5dp" for border on left and right-->
        <shape android:shape="rectangle">
            <corners android:radius="35dp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="0dp"
                />

            <padding android:bottom="0dp" />
            <solid android:color="@color/lightOrange" />

        </shape>
    </item>


</layer-list>